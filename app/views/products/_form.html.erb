<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :product_name, style: "display: block", class: "form-label" %>
    <%= form.text_field :product_name, class: "form-control" %>
  </div>

  <div class="d-flex flex-row bd-highlight mb-3">
    <div class="me-4">
      <%= form.label :product_value, style: "display: block", class: "form-label" %>
      <%= form.number_field :product_value, class: "form-control" %>
    </div>
    <div>
      <%= form.label :currency_id, style: "display: block", class: "form-label" %>
      <%= form.select :currency_id, Currency.pluck(:currency_symbol, :id),{}, { class: "form-select" } %>
    </div>
  </div>

  <div>
    <%= form.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
